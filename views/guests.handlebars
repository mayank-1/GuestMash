<div class="col-xs-12 col-sm-6 col-md-10 mx-auto my-5">
    <div class="title row justify-content-center">
        <h1>Guests</h1>
    </div>
    <div class="container my-4">
        <div class="row">
            {{#each guest}}
            <div class="col-xs-12 col-sm-3 col-md-3">
                <div class="card-deck">
                    <div class="card mt-3 shadow-sm bg-white rounded">
                        <img src="{{this.profile}}" class="card-img-top img-thumbnail" style="height: 250px;"
                            alt="{{this.name}}">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                        </div>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="row mx-auto my-4">
                <div class="card border-danger mb-3" style="max-width: 18rem;">
                    <div class="card-header">Hi! there</div>
                    <div class="card-body text-danger">
                        <h5 class="card-title">0 Guests Found</h5>
                        <p class="card-text">Let's Enroll some new Guests!</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>